{
  "name": "figma-mcp-bridge",
  "version": "1.0.0",
  "description": "Figma plugin that executes MCP commands from the bridge server",
  "main": "dist/code.js",
  "scripts": {
    "build": "npm run build:code && npm run build:ui",
    "build:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es6 --format=iife",
    "build:ui": "cp src/ui.html dist/ui.html",
    "watch": "npm run build && npm-run-all --parallel watch:code watch:ui",
    "watch:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2020 --format=iife --watch",
    "watch:ui": "chokidar 'src/ui.html' -c 'cp src/ui.html dist/ui.html'"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.0",
    "esbuild": "^0.20.0",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.0"
  }
}
