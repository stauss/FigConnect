{
  "name": "figconnect",
  "version": "1.0.0",
  "description": "Figma MCP Server and Plugin Bridge",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:mcp dev:plugin",
    "dev:mcp": "cd figma-mcp-server && npm run watch:server",
    "dev:plugin": "cd figma-plugin-bridge && npm run watch",
    "build": "npm-run-all build:mcp build:plugin",
    "build:mcp": "cd figma-mcp-server && npm run build",
    "build:plugin": "cd figma-plugin-bridge && npm run build",
    "test": "npm-run-all test:mcp test:plugin",
    "test:mcp": "cd figma-mcp-server && npm test",
    "test:plugin": "cd figma-plugin-bridge && npm test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
